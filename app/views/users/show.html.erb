<div class="featured-container">
  <h1 class="user-dash-title">User dashboard - <%= @user.name %></h1>

  <h2 class="user-dash-subtitle">Your Pet Pal Bookings</h2>
  <div class="container">
    <div class="row">
        <% @user.bookings.each do |booking| %>
           <%= link_to user_booking_path(user_id: current_user, pet_id: booking.pet_id) do %>
          <div class="col-xs-6 col-md-3">
            <div class="card">
              <div class="card-image" style="background-image: url(<%= booking.pet.photo %>)"></div>
              <div class="card-heading">
                <p class="card-heading-item text-md"><%= booking.pet.name %></p>
                <!-- <p class="card-heading-item text-sm"><%= booking.pet.age %></p> -->
              </div>
              <!-- pet.location to be added instead placeholder! -->
              <!-- <p class="card-subheading text-xs"><%= booking.pet.location %></p> -->
              <p class="card-subheading text-xs">Start: <%= booking.start_date %></p>
              <p class="card-subheading text-xs">End: <%= booking.end_date %></p>
              <% if booking.status == "pending" %>
                <p style="color:orange"><%= booking.status %></p>
              <% elsif booking.status == "Accepted" %>
                <p style="color:green"><%= booking.status %>
              <% else %>
              <p style="color:red"><%= booking.status %>
              <% end %>
            </div>
          </div>
          <% end %>
       <% end %>
    </div>
  </div>
</div>
