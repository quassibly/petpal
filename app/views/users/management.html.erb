<div class="header" %>
  <h1> Pet Pal Management</h1>
</div>
<h3>Your Pet Pals Bookings</h3>
<div class="row card-container">
  <% @pets.each do |pet| %>
    <% pet.bookings.each do |booking| %>
      <div class="col-xs-6 col-md-3">
        <div class="card">
          <div class="card-image" style="height: 200px; width: 200px; border: solid 1px grey; background-image: url('<%= booking.pet.photo %>')"></div>
          <div class="card-heading">
            <p class="card-heading-item text-md"><%= link_to booking.pet.name, user_booking_path(user_id: booking.user_id, id: booking.pet_id) %></p>
          </div>
          <p class="text-sm">
          Booker: <%= booking.user.name %></p>
          <p>Start: <%= booking.start_date %></p>
          <p>End Date: <%= booking.end_date %></p>
          <% if booking.status == "pending" %>
           <p style="color:orange"><%= booking.status %></p>
          <% elsif booking.status == "Accepted" %>
           <p style="color:green"><%= booking.status %>
          <% else %>
            <p style="color:red"><%= booking.status %>
          <%end%>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <h3>Your Pals</h3>
  <div class="row card-container">
    <% @pets.each do |pet| %>
    <div class="col-xs-6 col-md-3">
      <div class="card">
        <div class="card-image"style="height: 200px; width: 200px; border: solid 1px grey; background-image: url('<%= pet.photo %>')" ></div>
        <div class="card-heading">
          <p class="card-heading-item text-md"><%= link_to pet.name, pet_path(pet) %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
    <%= link_to 'Add a new Pet Pal!', new_pet_path, class:"btn btn-primary" %>
