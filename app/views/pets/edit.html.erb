<h1>Edit your pal</h1>

<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :age, as: :integer %>
  <%= f.input :location %>
  <%= f.input :animal_type %>
  <%= f.input :breed %>
  <%= f.input :description, as: :text %>
  <%= f.input :home_stay, as: :radio_buttons %>
  <%= f.input :take_away, as: :radio_buttons %>
  <%= f.input :adoptable, as: :radio_buttons %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>
