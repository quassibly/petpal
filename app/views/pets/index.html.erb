  <div class="row">
    <div class="col-xs-12 main-form">

      <%= form_tag pets_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a pet"
        %>
        <%= text_field_tag :location,
          params[:location],
          class: "form-control",
          placeholder: "Location"
        %>
        <%= submit_tag("Search")%>

      <% end %>
    </div>
  </div>
  <div class="main-container">
    <div class="row">
      <div class="col-sm-8">
        <% @pets.each do |pet| %>
          <%= link_to pet_path(pet.id) do %>
            <div class="col-xs-12 col-sm-4">
              <div class="card">
                <div class="card-image" style="background-image: url(<%= pet.photo %>)"></div>
                <div class="card-heading">
                  <p class="card-heading-item text-md"><%= pet.name %></p> <p class="card-heading-item text-sm"><%= pet.age %></p>
                </div>
                <p class="card-subheading text-xs"><%= pet.location %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <!-- <div class="col-sm-4"> -->
        <div class="col-sm-4" id="map"; data-markers="<%= @markers.to_json %>">
        <!-- </div> -->
      </div>
    </div>
  </div>
  <!-- </div> -->
